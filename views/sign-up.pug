include utils.pug

doctype html
html
  head
    block head
      title="Busy Bees - Sign Up"
      link(rel='stylesheet' href='/stylesheets/sign-up.css')
  body
    div(id="left-panel")
      a(id="home-icon") üêù
        p(class="busy-bees") BUSY BEES
    div(id="right-panel")
      div(id="login-div")
        p(id="already-text" class="right-text") Already have an account?
        a(type="button" id="login-button" class="btn" href="/users/login") Log in
      +validationErrorSummary(errors)
      form(id="sign-up-form" method="post" action="/users/sign-up")
        label(id="form-text" class="right-text") Sign up for free.
        input(type="hidden" name="_csrf" value=csrfToken)
        input(type="text" id="firstName" class="inputBox" name="firstName" placeholder="First Name", required)
        input(type="text" id="lastName" class="inputBox" name="lastName" placeholder="Last Name", required)
        input(type="email" id="email" class="inputBox" name="email" placeholder="Email", required)
        input(type="text" id="username" class="inputBox" name="username" placeholder="Username", required)
        input(type="password" id="password" class="inputBox" name="password" placeholder="Password", required)
        input(type="password" id="confirmPassword" class="inputBox" name="confirmPassword" placeholder="Confirm Password", required)
        button(type="submit" id="signup-button" class="btn") Sign up!
